set encoding=utf8

" show tab
set tabstop=2
set softtabstop=2

" input tab
set expandtab
set smarttab

" indent
set smartindent
set cindent
set shiftwidth=2

" search
set incsearch
set ignorecase
set smartcase

" command
set wildmenu

" syntax
syntax on
set modeline

" dobule width char
set ambiwidth=double

" prevent auto line breaks
set textwidth=0
